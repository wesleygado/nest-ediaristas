<div class="content-header">
  <div class="container-fluid">
    <h1>Novo Serviço</h1>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <form action="/services" method="post">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <div class="card">
        <div class="card-body">
          <fieldset>
            <legend>Identificação</legend>
            <div class="row">
              <div class="col-lg-12">
                <div class="{{alert}}">
                  <p> {{{message}}} </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="nome">Nome</label>
                  <input value="{{serviceOld.0.name}}" type="input" required class="form-control" name="name" id="name"
                    placeholder="Nome do serviço" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="icone">Ícone</label>
                  <select name="icone" id="icone" required class="form-control">
                    <option value="{{#if message}}{{serviceOld.0.icone}}{{^}}Selecione o icone{{/if}}">{{#if message}}{{serviceOld.0.icone}}{{^}}Selecione o icone{{/if}}</option>
                    <option value="twf-cleaning-1">Ícone 1</option>
                    <option value="twf-cleaning-2">Ícone 2</option>
                    <option value="twf-cleaning-3">Ícone 3</option>
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="posicao">Posição na plataforma</label>
                  <input value="{{serviceOld.0.posicao}}" type="input" required class="form-control" name="posicao" id="posicao" data-mask="00"
                    placeholder="Posição do serviço na plataforma" />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Globais</legend>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="valor_minimo">Valor Mínimo</label>
                  <input value="{{serviceOld.0.valorMinimo}}" type="input" required class="form-control" name="valorMinimo" data-mask="#.##0,00"
                  data-mask-reverse="true" placeholder="Valor mínimo do serviço" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="quantidade_horas">Quantidade Mínima de horas</label>
                  <input value="{{serviceOld.0.quantidadeHoras}}" type="input" required class="form-control" name="quantidadeHoras"
                    data-mask="0" placeholder="Quantidade mínima de horas" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="porcentagem">Porcentagem de Comissão</label>
                  <input value="{{serviceOld.0.porcentagem}}" type="input" required class="form-control" name="porcentagem" data-mask="00"
                    placeholder="porcentagem de comissão no serviço" />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Cômodos</legend>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_quarto">Valor por Quarto</label>
                  <input value="{{serviceOld.0.valorQuarto}}" type="input" required class="form-control" name="valorQuarto"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por quarto" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_quarto">Quantidade de Horas por quarto</label>
                  <input value="{{serviceOld.0.horasQuarto}}" type="input" required class="form-control" name="horasQuarto" data-mask="0"
                    placeholder="Quantidade horas por quarto" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_sala">Valor por sala</label>
                  <input value="{{serviceOld.0.valorSala}}" type="input" required class="form-control" name="valorSala"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por sala" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_sala">Quantidade de horas por sala</label>
                  <input value="{{serviceOld.0.horasSala}}" type="input" required class="form-control" name="horasSala" data-mask="0"
                    placeholder="Quantidade horas por sala" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_banheiro">Valor por banheiro</label>
                  <input value="{{serviceOld.0.valorBanheiro}}" type="input" required class="form-control" name="valorBanheiro"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por banheiro" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_banheiro">Quantidade de horas por banheiro</label>
                  <input value="{{serviceOld.0.horasBanheiro}}" type="input" required class="form-control" name="horasBanheiro" data-mask="0"
                   placeholder="Quantidade horas por banheiro" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_cozinha">Valor por cozinha</label>
                  <input value="{{serviceOld.0.valorCozinha}}" type="input" required class="form-control" name="valorCozinha"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por cozinha" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_cozinha">Quantidade de horas por cozinha</label>
                  <input value="{{serviceOld.0.horasCozinha}}" type="input" required class="form-control" name="horasCozinha" data-mask="0"
                   placeholder="Quantidade horas por cozinha" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_quintal">Valor por quintal</label>
                  <input value="{{serviceOld.0.valorQuintal}}" type="input" required class="form-control" name="valorQuintal"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por quintal" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_quintal">Quantidade de horas por quintal</label>
                  <input value="{{serviceOld.0.horasQuintal}}" type="input" required class="form-control" name="horasQuintal" data-mask="0"
                   placeholder="Quantidade horas por quintal" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_outros">Valor por outros tipos de cômodos</label>
                  <input value="{{serviceOld.0.valorOutros}}" type="input" required class="form-control" name="valorOutros"
                    data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por outros" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_outros">Quantidade de horas por outros tipos de
                    cômodos</label>
                  <input value="{{serviceOld.0.horasOutros}}" type="input" required class="form-control" name="horasOutros" data-mask="0"
                    placeholder="Quantidade horas por outros" />
                </div>
              </div>
            </div>
          </fieldset>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <button class="btn btn-primary" type="submit">
                  Salvar
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>