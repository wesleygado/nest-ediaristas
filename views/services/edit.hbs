<div class="content">
  <div class="container-fluid">
    <form action="/services/{{service.id}}/edit?_method=PATCH" method="post">
      <div class="card">
        <div class="card-body">
          <fieldset>
            <legend>Identificação</legend>
            <div class="row">
              <div class="col-lg-12">
                <div class="{{alert}}">
                  <p> {{{message}}} </p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="nome">Nome</label>
                  <input value="{{#if message}}{{service_old.0.name}}{{^}}{{service.name}}{{/if}}" type="input" class="form-control" name="name" id="name"
                    placeholder="Nome do serviço" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="icone">Ícone</label>
                  <select name="icone" id="icone" class="form-control">
                    <option value="{{#if message}}{{service_old.0.icone}}{{^}}{{service.icone}}{{/if}}">{{#if message}}{{service_old.0.icone}}{{^}}{{service.icone}}{{/if}}</option>
                    <option value="twf-cleaning-1">Ícone 1</option>
                    <option value="twf-cleaning-2">Ícone 2</option>
                    <option value="twf-cleaning-3">Ícone 3</option>
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="posicao">Posição na plataforma</label>
                  <input value="{{#if message}}{{service_old.0.posicao}}{{^}}{{service.posicao}}{{/if}}" type="input" class="form-control" name="posicao" id="posicao"
                    data-mask="00" placeholder="Posição do serviço na plataforma" />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Globais</legend>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="valor_minimo">Valor Mínimo</label>
                  <input value="{{#if message}}{{service_old.0.valor_minimo}}{{^}}{{service.valor_minimo}}{{/if}}" type="input" class="form-control" name="valor_minimo"
                    data-mask="#.##0,00" data-mask-reverse="true" id="valor_minimo"
                    placeholder="Valor mínimo do serviço" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="quantidade_horas">Quantidade Mínima de horas</label>
                  <input value="{{#if message}}{{service_old.0.quantidade_horas}}{{^}}{{service.quantidade_horas}}{{/if}}" type="input" class="form-control" name="quantidade_horas"
                    id="quantidade_horas" data-mask="0" placeholder="Quantidade mínima de horas" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="porcentagem">Porcentagem de Comissão</label>
                  <input value="{{#if message}}{{service_old.0.porcentagem}}{{^}}{{service.porcentagem}}{{/if}}" type="input" class="form-control" name="porcentagem"
                    id="porcentagem" data-mask="00" placeholder="porcentagem de comissão no serviço" />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Cômodos</legend>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_quarto">Valor por Quarto</label>
                  <input value="{{#if message}}{{service_old.0.valor_quarto}}{{^}}{{service.valor_quarto}}{{/if}}" type="input" class="form-control" name="valor_quarto"
                    id="valor_quarto" data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por quarto" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_quarto">Quantidade de Horas por quarto</label>
                  <input value="{{#if message}}{{service_old.0.horas_quarto}}{{^}}{{service.horas_quarto}}{{/if}}" type="input" class="form-control" name="horas_quarto"
                    id="horas_quarto" data-mask="0" placeholder="Quantidade horas por quarto" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_sala">Valor por sala</label>
                  <input value="{{#if message}}{{service_old.0.valor_sala}}{{^}}{{service.valor_sala}}{{/if}}" type="input" class="form-control" name="valor_sala"
                    id="valor_sala" data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por sala" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_sala">Quantidade de horas por sala</label>
                  <input value="{{#if message}}{{service_old.0.horas_sala}}{{^}}{{service.horas_sala}}{{/if}}" type="input" class="form-control" name="horas_sala"
                    id="horas_sala" data-mask="0" placeholder="Quantidade horas por sala" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_banheiro">Valor por banheiro</label>
                  <input value="{{#if message}}{{service_old.0.valor_banheiro}}{{^}}{{service.valor_banheiro}}{{/if}}" type="input" class="form-control" name="valor_banheiro"
                    id="valor_banheiro" data-mask="#.##0,00" data-mask-reverse="true"
                    placeholder="Valor por banheiro" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_banheiro">Quantidade de horas por banheiro</label>
                  <input value="{{#if message}}{{service_old.0.horas_banheiro}}{{^}}{{service.horas_banheiro}}{{/if}}" type="input" class="form-control" name="horas_banheiro"
                    data-mask="0" id="horas_banheiro" placeholder="Quantidade horas por banheiro" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_cozinha">Valor por cozinha</label>
                  <input value="{{#if message}}{{service_old.0.valor_cozinha}}{{^}}{{service.horas_cozinha}}{{/if}}" type="input" class="form-control" name="valor_cozinha"
                    id="valor_cozinha" data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por cozinha" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_cozinha">Quantidade de horas por cozinha</label>
                  <input value="{{#if message}}{{service_old.0.horas_cozinha}}{{^}}{{service.horas_cozinha}}{{/if}}" type="input" class="form-control" name="horas_cozinha"
                    data-mask="0" id="horas_cozinha" placeholder="Quantidade horas por cozinha" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_quintal">Valor por quintal</label>
                  <input value="{{#if message}}{{service_old.0.valor_quintal}}{{^}}{{service.valor_quintal}}{{/if}}" type="input" class="form-control" name="valor_quintal"
                    id="valor_quintal" data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por quintal" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_quintal">Quantidade de horas por quintal</label>
                  <input value="{{#if message}}{{service_old.0.horas_quintal}}{{^}}{{service.horas_quintal}}{{/if}}" type="input" class="form-control" name="horas_quintal"
                    data-mask="0" id="horas_quintal" placeholder="Quantidade horas por quintal" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_outros">Valor por outros tipos de cômodos</label>
                  <input value="{{#if message}}{{service_old.0.valor_outros}}{{^}}{{service.valor_outros}}{{/if}}" type="input" class="form-control" name="valor_outros"
                    id="valor_outros" data-mask="#.##0,00" data-mask-reverse="true" placeholder="Valor por outros" />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="horas_outros">Quantidade de horas por outros tipos de
                    cômodos</label>
                  <input value="{{#if message}}{{service_old.0.horas_outros}}{{^}}{{service.horas_outros}}{{/if}}" type="input" class="form-control" name="horas_outros"
                    data-mask="0" id="horas_outros" placeholder="Quantidade horas por outros" />
                </div>
              </div>
            </div>
          </fieldset>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <button class="btn btn-primary" type="submit">
                  Salvar
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>